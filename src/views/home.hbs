<header style="padding-bottom: 0;">
    {{>nav_bar}}
</header>

<main>
    <h1>Expense Tracker</h1>

    {{#if totalIncomeAmount}}
    <p>Total income amount: <span style="color: springgreen;">{{totalIncomeAmount}}</span></p>
    {{else}}
    <p>No incomes</p>
    {{/if}}

    {{#if totalExpenseAmount}}
    <p>Total expense amount: <span style="color: firebrick;">{{totalExpenseAmount}}</span></p>
    {{else}}
    <p>No expense</p>
    {{/if}}

    {{#if availableBalance}}
    <p>Available balance: {{availableBalance}}</p>
    {{else}}
    <p>No balance</p>
    {{/if}}
</main>